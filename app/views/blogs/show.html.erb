<%= breadcrumb %>

<%= tweet_button({:text => @blog.title,:via => nil,:count => "horizontal"}) %>

<article id="blog" itemscope="itemscope" itemtype="http://schema.org/Article">
	<h1 class="title" itemprop="name"> <%= @blog.title %> </h1>
	<div class="row">
		<div class="body" itemprop="articleBody">
			<%= markdown @blog.content %>
		</div>
	</div>

	<ul class="tags inline">
		<% @blog.tags.each do |tag| %>
		<li>
			<%= link_to tag.tag, {:controller => "blogs", :action => "index", :search=>{:tag=>tag.tag}} %>
		</li>
		<% end %>
	</ul>
</article>
